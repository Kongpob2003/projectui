<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mauiv2.page.RegisterPage"
             Title="ลงทะเบียนเรียน"
             BackgroundColor="#F5F7FA">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Kiw.Net" FontSize="28" FontAttributes="Bold" TextColor="#333333" HorizontalOptions="Center" />
        <Frame BackgroundColor="White" CornerRadius="10" Padding="10" HasShadow="True">
            <Entry x:Name="CourseEntry" Placeholder="กรอกชื่อวิชา" TextColor="#333333" PlaceholderColor="#999999" />
        </Frame>
        <Button Text="ลงทะเบียนวิชา" BackgroundColor="#4CAF50" TextColor="White" FontSize="18" CornerRadius="10" WidthRequest="200" HeightRequest="50" Clicked="OnRegisterClicked" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>