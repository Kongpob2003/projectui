<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mauiv2.page.ProfilePage"
             Title="โปรไฟล์"
             BackgroundColor="#F5F7FA">
    <Grid>
        <Image Source="main.jpg" Aspect="AspectFill" Opacity="0.8" />
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
            <Frame BackgroundColor="White" CornerRadius="20" Padding="30" HasShadow="True" WidthRequest="350">
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Frame WidthRequest="150" HeightRequest="150" CornerRadius="75" Padding="0" BorderColor="#CCCCCC" HasShadow="True">
                        <Image Source="profile_placeholder.png" Aspect="AspectFill" />
                    </Frame>
                    <Label Text="user@example.com" FontSize="20" FontAttributes="Bold" TextColor="#333333" HorizontalOptions="Center" />
                    <Button Text="ออกจากระบบ" BackgroundColor="#FF4444" TextColor="White" CornerRadius="10" WidthRequest="200" HeightRequest="50" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>