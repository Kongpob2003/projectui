<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.LoginPage"
             BackgroundColor="#F0F2F5">
    <Grid>
        <Image Source="bg.jpg" Aspect="AspectFill" Opacity="0.6" />
        <ScrollView>
            <Frame BackgroundColor="White" CornerRadius="20" Padding="20" Margin="30" HasShadow="True" VerticalOptions="CenterAndExpand">
                <VerticalStackLayout Spacing="20">
                    <Label Text="เข้าสู่ระบบ" FontSize="32" FontAttributes="Bold" TextColor="#333333" HorizontalOptions="Center" />
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="10" HasShadow="False">
                        <Entry x:Name="EmailEntry" Placeholder="อีเมล" Keyboard="Email" TextColor="#333333" PlaceholderColor="#999999" />
                    </Frame>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="10" HasShadow="False">
                        <Entry x:Name="PasswordEntry" Placeholder="รหัสผ่าน" IsPassword="True" TextColor="#333333" PlaceholderColor="#999999" />
                    </Frame>
                    <Button Text="เข้าสู่ระบบ" BackgroundColor="#007AFF" TextColor="White" FontSize="18" CornerRadius="10" HeightRequest="50" Clicked="OnLoginButtonClicked" />
                </VerticalStackLayout>
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>